<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>hungnt.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>hungnt.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCakeControllerr</servlet-name>
        <servlet-class>hungnt.controllers.CreateCakeControllerr</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchCakeController</servlet-name>
        <servlet-class>hungnt.controllers.SearchCakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>hungnt.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCakeController</servlet-name>
        <servlet-class>hungnt.controllers.UpdateCakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCakeDetailController</servlet-name>
        <servlet-class>hungnt.controllers.GetCakeDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCakeController</servlet-name>
        <servlet-class>hungnt.controllers.DeleteCakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>hungnt.controllers.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartItemController</servlet-name>
        <servlet-class>hungnt.controllers.UpdateCartItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCartItemController</servlet-name>
        <servlet-class>hungnt.controllers.DeleteCartItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutController</servlet-name>
        <servlet-class>hungnt.controllers.CheckOutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetOrderDetailController</servlet-name>
        <servlet-class>hungnt.controllers.GetOrderDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetOrderHistoryController</servlet-name>
        <servlet-class>hungnt.controllers.GetOrderHistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <servlet-class>hungnt.controllers.LoginGoogleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCakeControllerr</servlet-name>
        <url-pattern>/CreateCakeControllerr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchCakeController</servlet-name>
        <url-pattern>/SearchCakeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCakeController</servlet-name>
        <url-pattern>/UpdateCakeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCakeDetailController</servlet-name>
        <url-pattern>/GetCakeDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCakeController</servlet-name>
        <url-pattern>/DeleteCakeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddToCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartItemController</servlet-name>
        <url-pattern>/UpdateCartItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCartItemController</servlet-name>
        <url-pattern>/DeleteCartItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutController</servlet-name>
        <url-pattern>/CheckOutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetOrderDetailController</servlet-name>
        <url-pattern>/GetOrderDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetOrderHistoryController</servlet-name>
        <url-pattern>/GetOrderHistoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <url-pattern>/LoginGoogleServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <resource-ref>
        <res-ref-name>sqlserver</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
